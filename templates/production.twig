{% extends 'app.twig' %}
{% set page = 'productions' %}

{% block title %}Produkcja{% endblock %}

{% block content %}
    <h1 class="mt-5 mb-4">
        {% if production.id is defined %}
            Produkcja #{{ production.id }}
        {% else %}
            Nowa produkcja
        {% endif %}
    </h1>
    <form method="POST">
        <input type="hidden" name="id" value="{{ production.id }}" >
        <div class="form-group">
            <label>Tytuł</label>
            <input class="form-control" name="name" value="{{ production.name }}">
        </div>
        <div class="form-group">
            <label>Gatunek</label>
            <input class="form-control" name="genre" value="{{ production.genre }}">
        </div>
        <div class="form-group">
            <label>Premiera</label>
            <input type="date" class="form-control" name="premiere" value="{{ production.premiere }}"/>
        </div>
        <div class="form-group">
            <label>Budżet</label>
            <input class="form-control" name="costs" value="{{ production.costs }}">
        </div>
        <div class="form-group">
            <label>ID zlecającego</label>
            <input class="form-control" name="contracting_id" value="{{ production.contracting_id }}">
        </div>
        {% if production.id is defined %}
        <button type="submit" name="submit" class="btn btn-primary">Edytuj</button>
        <button type="button" class="btn btn-danger" id="delete">Usuń</button>
        {% else %}
        <button type="submit" name="submit" class="btn btn-primary">Dodaj</button>
        {% endif %}
        <script>
            $("#delete").click(() => {
                window.location = window.location + "&delete=1";
            })
        </script>
    </form>
{% endblock %}